<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>
    <style>
        table ,th,tr,td{
            border:  1px solid;
            border-collapse: collapse;
            padding: 15px;
        }
        form{
            margin: 20px;
            display: flex;
            float: right;
            
        }
    </style>
</head>
<body>
    <form method="get" action="/new">
<button>New</button>
    </form>
    <table >
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Email</th>
        </tr>
    <% for(let user of result){ %>
        <tr>
            <td><%= user.id %></td>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
           <td> <form method="GET" action="/user/<%= user.id %>/edit">
            <button>Edit Username</button>
        </form></td>
           <td> <form method="GET" action="/user/<%= user.id %>/delete">
            <button>Delete</button>
        </form></td>
          </tr>
        <% }%>
    </table>
</body>
</html>